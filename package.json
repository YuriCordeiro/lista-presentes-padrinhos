{
  "name": "lista-presentes-padrinhos",
  "version": "2.0.0",
  "description": "Lista de presentes elegante para padrinhos com React + TypeScript",
  "private": true,
  "type": "module",
  "keywords": [
    "react",
    "typescript",
    "gifts",
    "wedding",
    "mobile-first",
    "pwa"
  ],
  "author": "Carol e Yuri",
  "scripts": {
    "dev": "vite --open",
    "server": "cd server && npm run simple",
    "server:install": "cd server && npm install",
    "dev:full": "concurrently \"npm run server\" \"npm run dev\"",
    "build": "tsc -b && vite build",
    "preview": "vite preview --open",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "deploy:vercel": "npm run build && vercel --prod",
    "deploy:netlify": "npm run build && netlify deploy --prod --dir=dist"
  },
  "dependencies": {
    "@emailjs/browser": "^4.4.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/styled-components": "^5.1.34",
    "axios": "^1.11.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "framer-motion": "^12.23.12",
    "googleapis": "^156.0.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.8.0",
    "styled-components": "^6.1.19"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^4.7.0",
    "concurrently": "^9.2.0",
    "eslint": "^9.32.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "tsx": "^4.20.4",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.39.0",
    "vite": "^7.1.0"
  }
}
